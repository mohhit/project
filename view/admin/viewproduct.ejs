<div class="container">
  <div class="col-md-10 col-md-offset-1">
  <h3>View All Category</h3>
  <table class="table table-bordered table-striped">
  	<tr>
  		<th>S.No.</th>
      <th>Product Name</th>
      <th>Product Price</th>
      <th>Product Discount</th>
      <th>Category Name</th>
  		<th>Product Image</th>
  		<th>Edit</th>
  		<th>Delete</th>
  	</tr>
  	<% data.forEach(function(z, i){ %>
  		<tr>
  			<td><%= i+1 %></td>
        <td><%= z.name %></td>
        <td><%= z.price %></td>
  			<td><%= z.discount %></td>
        <td><%= z.category %></td>

  			<td><img src = "/productimage/<%= z.image %>" height="50" width="50"></td>

        <td><a href="viewproduct/update/<%= z._id %>" class="btn btn-sm btn-info">Edit</a></td>

  			<td><a href="viewproduct/delete/<%=z._id%>" data-toggle="modal" class="btn btn-sm btn-danger">Delete</a></td>

  		</tr>
 <% }) %>
  </table>
</div>
</div>

<div class="modal fade" id="delModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h3>Delete</h3>
			</div>
			<div class="modal-body">
				<p>Are you sure want to delete this category !</p>
			</div>
			<div class="modal-footer">
				<a href="#" class="btn btn-default">Cancle</a>
				<a href="#" class="btn btn-danger">OK</a>
			</div>
		</div>
	</div>
</div>
